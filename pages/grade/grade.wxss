.grade-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 0 32rpx;
  box-sizing: border-box;
  overflow: hidden;
}

/* 顶部 GPA 卡片区域固定 */
.gpa-hero-wrap {
  padding-top: 20rpx;
  padding-bottom: 32rpx;
  flex-shrink: 0; /* 禁止收缩 */
}

.gpa-hero {
  background: var(--primary-gradient);
  padding: 60rpx 40rpx;
  border-radius: var(--radius-xl);
  position: relative;
  overflow: hidden;
  box-shadow: var(--shadow-primary);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 列表标题固定 */
.grade-list-header {
  margin: 0 10rpx 24rpx;
  flex-shrink: 0;
}

/* 仅滚动区域 */
.grade-scroll-area {
  flex: 1;
  width: 100%;
  height: 0; /* 触发 flex 子元素滚动 */
}

.grade-list-inner {
  padding: 4rpx 0; /* 留出一点阴影空间 */
}

/* 其余样式保持不变... */
.semester-pill {
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 32rpx;
  border-radius: var(--radius-full);
  backdrop-filter: blur(10px);
  margin-bottom: 40rpx;
  z-index: 2;
}

.picker-inner {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
}

.gpa-display {
  text-align: center;
  z-index: 2;
}

.gpa-number {
  font-size: 100rpx;
  font-weight: 800;
  color: white;
  line-height: 1;
  text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.gpa-sub {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 16rpx;
  text-transform: uppercase;
  letter-spacing: 4rpx;
}

.gpa-deco {
  position: absolute;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  z-index: 1;
}

.gpa-deco-1 { width: 300rpx; height: 300rpx; top: -100rpx; right: -100rpx; }
.gpa-deco-2 { width: 200rpx; height: 200rpx; bottom: -50rpx; left: -50rpx; }

.grade-card {
  background: var(--bg-card);
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: var(--radius-lg);
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--border-light);
}

.gc-left { flex: 1; }
.gc-name { font-size: 30rpx; font-weight: 700; color: var(--text-900); margin-bottom: 12rpx; display: block; }
.gc-tags { display: flex; align-items: center; gap: 16rpx; }
.gc-tag { font-size: 20rpx; background: var(--primary-light); color: var(--primary); padding: 4rpx 12rpx; border-radius: var(--radius-sm); font-weight: 600; }
.gc-credit { font-size: 22rpx; color: var(--text-300); }
.score-box { text-align: right; }
.score-val { font-size: 44rpx; font-weight: 800; }
.score-high { color: var(--success); }
.score-mid { color: var(--warning); }
.score-low { color: var(--danger); }
.point-val { font-size: 20rpx; color: var(--text-300); display: block; }
