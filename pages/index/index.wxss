/* pages/index/index.wxss */

.home-container {
  padding-top: 100rpx;
  background-color: var(--bg-color);
}

/* ===== Hero 问候区 ===== */
.hero-section {
  margin-bottom: var(--spacing-lg);
  padding: 0 var(--spacing-xs);
}

.hero-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hero-greeting {
  flex: 1;
}

.greeting-label {
  display: block;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.greeting-main {
  font-size: 52rpx;
  font-weight: 700;
  color: var(--text-main);
  line-height: 1.2;
}

.greeting-text {
  font-weight: 300;
}

.greeting-name {
  color: var(--primary-color);
  font-weight: 700;
}

/* 头像 */
.hero-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: var(--accent-gradient);
  box-shadow:
    0 8rpx 24rpx rgba(102, 126, 234, 0.35),
    var(--neu-shadow-sm);
  flex-shrink: 0;
  margin-left: var(--spacing-md);
}

.avatar-text {
  color: var(--true-white);
  font-size: 40rpx;
  font-weight: 700;
}

/* ===== Section 标题 ===== */
.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-sm) var(--spacing-xs);
}

.title-text {
  letter-spacing: 1rpx;
}

.title-count {
  background: var(--bg-color);
  box-shadow: var(--neu-shadow-sm);
  padding: 6rpx 20rpx;
  border-radius: var(--radius-full);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* ===== 快捷入口 Grid ===== */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--spacing-md);
  padding: var(--spacing-xs);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.action-icon-wrap {
  width: 112rpx;
  height: 112rpx;
  border-radius: var(--radius-lg);
  background: var(--bg-color);
  box-shadow: var(--neu-shadow-out);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.35);
  transition: all 0.2s ease;
}

.action-icon-wrap:active {
  box-shadow: var(--neu-shadow-in);
  border-color: rgba(255, 255, 255, 0.1);
  transform: scale(0.95);
}

.action-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  /* 渐变色图标容器内的微阴影 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.action-label {
  font-size: 24rpx;
  color: var(--text-regular);
  font-weight: 500;
}

/* ===== 今日课程 ===== */
.today-courses {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
  padding: 0 var(--spacing-xs);
}

.course-row {
  display: flex;
  align-items: center;
  background: var(--bg-color);
  border-radius: var(--radius-md);
  box-shadow: var(--neu-shadow-out);
  padding: var(--spacing-md);
  gap: var(--spacing-md);
  border: 1rpx solid rgba(255, 255, 255, 0.35);
}

.course-time-pill {
  background: var(--bg-color);
  box-shadow: var(--neu-shadow-in);
  padding: 12rpx 20rpx;
  border-radius: var(--radius-full);
  color: var(--primary-color);
  flex-shrink: 0;
  min-width: 100rpx;
}

.course-body {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
}

.course-name {
  line-height: 1.3;
}

.course-meta {
  letter-spacing: 1rpx;
}

/* ===== 空状态 ===== */
.empty-box {
  padding: var(--spacing-xl) var(--spacing-md);
  background: var(--bg-color);
  border-radius: var(--radius-md);
  box-shadow: var(--neu-shadow-in);
  margin: 0 var(--spacing-xs);
}

/* ===== 公告列表 ===== */
.notice-list {
  display: flex;
  flex-direction: column;
}

.notice-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  gap: var(--spacing-sm);
  border-bottom: 1rpx solid var(--divider-color);
}

.notice-row:last-child {
  border-bottom: none;
}

.notice-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.notice-title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
