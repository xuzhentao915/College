.home-container {
  padding-bottom: 40rpx;
}

/* ===== 顶部英雄区 ===== */
.hero-section {
  padding: 40rpx 0 60rpx;
  position: relative;
}

.hero-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.greeting-label {
  display: block;
  font-size: 24rpx;
  color: var(--text-500);
  margin-bottom: 8rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.greeting-main {
  display: flex;
  align-items: baseline;
}

.greeting-text {
  font-size: 56rpx;
  font-weight: 800;
  color: var(--text-900);
}

.greeting-name {
  font-size: 56rpx;
  font-weight: 800;
  color: var(--primary);
  margin-left: 12rpx;
}

.hero-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: var(--radius-full);
  background: var(--primary-gradient);
  box-shadow: var(--shadow-primary);
  border: 4rpx solid var(--bg-card);
}

.avatar-text {
  color: white;
  font-size: 40rpx;
  font-weight: 600;
}

/* ===== 快捷入口网格 ===== */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin: 32rpx 0;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.action-icon-wrap {
  width: 110rpx;
  height: 110rpx;
  background: var(--bg-card);
  border-radius: var(--radius-md);
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: var(--shadow-sm);
  transition: all 0.2s ease;
}

.action-icon-wrap:active {
  transform: scale(0.92);
  box-shadow: none;
}

.action-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.action-label {
  font-size: 24rpx;
  color: var(--text-700);
  font-weight: 500;
}

/* ===== 校园公告 Swiper ===== */
.notice-swiper {
  height: 220rpx; /* 调整高度以适应内容 */
  margin-bottom: 12rpx;
}

.notice-swiper-item {
  padding-right: 20rpx; /* 卡片间距 */
  box-sizing: border-box;
}

.notice-card {
  background: var(--bg-card);
  padding: 32rpx;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border: 1px solid var(--border-light);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.notice-card::after {
  content: '';
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 100rpx;
  height: 100rpx;
  background: var(--primary-light);
  border-radius: 50%;
  opacity: 0.5;
  filter: blur(20px);
}

.notice-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: var(--radius-sm);
  font-size: 20rpx;
  font-weight: 600;
  align-self: flex-start;
  margin-bottom: 16rpx;
}

.tag-urgent { background: #FEF2F2; color: var(--danger); }
.tag-normal { background: #F1F5F9; color: var(--text-500); }

.notice-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-900);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  z-index: 1;
}

.notice-footer {
  margin-top: 16rpx;
  align-items: center;
}

.notice-date {
  font-size: 22rpx;
  color: var(--text-300);
}

.notice-btn {
  width: 80rpx;
  height: 48rpx;
  background: var(--text-900);
  border-radius: var(--radius-full);
}

/* ===== 今日课程卡片 ===== */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 48rpx 0 24rpx;
}

.title-text {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-900);
}

.title-action {
  font-size: 24rpx;
  color: var(--primary);
}

.today-courses {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.course-card {
  background: var(--bg-card);
  padding: 32rpx;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  display: flex;
  align-items: center;
  gap: 32rpx;
  border-left: 10rpx solid var(--primary);
}

.course-time-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-right: 32rpx;
  border-right: 1rpx solid var(--border-light);
}

.time-start {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-900);
}

.time-label {
  font-size: 20rpx;
  color: var(--text-300);
  margin-top: 4rpx;
}

.course-info {
  flex: 1;
}

.course-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-900);
  margin-bottom: 8rpx;
  display: block;
}

.course-meta {
  font-size: 24rpx;
  color: var(--text-500);
  display: flex;
  gap: 16rpx;
}

/* ===== 状态卡片 ===== */
.status-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-top: 32rpx;
}

.status-card {
  padding: 32rpx;
  border-radius: var(--radius-lg);
  background: var(--bg-card);
  box-shadow: var(--shadow-md);
}

.status-label {
  font-size: 24rpx;
  color: var(--text-500);
  margin-bottom: 12rpx;
  display: block;
}

.status-value {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-900);
}

.status-unit {
  font-size: 24rpx;
  color: var(--text-300);
  margin-left: 8rpx;
}
