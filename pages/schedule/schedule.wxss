.schedule-container {
  padding-top: 20rpx;
}

/* ===== 星期切换器 ===== */
.week-bar {
  display: flex;
  background: var(--bg-card);
  padding: 16rpx;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
  margin-bottom: 40rpx;
  position: sticky;
  top: 20rpx;
  z-index: 100;
  border: 1px solid var(--border-light);
}

.week-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
  border-radius: var(--radius-lg);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.week-label {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text-500);
}

.week-active {
  background: var(--primary);
  box-shadow: var(--shadow-primary);
  transform: translateY(-4rpx);
}

.week-active .week-label {
  color: white;
  font-weight: 700;
}

.week-dot {
  width: 8rpx;
  height: 8rpx;
  background: var(--primary);
  border-radius: 50%;
  margin-top: 8rpx;
}

.week-active .week-dot {
  background: white;
}

/* ===== 课程列表/时间轴 ===== */
.schedule-body {
  padding-left: 20rpx;
}

.timeline {
  position: relative;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 30rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: linear-gradient(to bottom, var(--primary) 0%, var(--border-light) 100%);
  opacity: 0.3;
}

.timeline-item {
  position: relative;
  padding-left: 80rpx;
  margin-bottom: 48rpx;
}

.timeline-node {
  position: absolute;
  left: 15rpx;
  top: 10rpx;
  width: 32rpx;
  height: 32rpx;
  background: var(--bg-main);
  border: 4rpx solid var(--primary);
  border-radius: 50%;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.node-inner {
  width: 12rpx;
  height: 12rpx;
  background: var(--primary);
  border-radius: 50%;
}

.schedule-card {
  background: var(--bg-card);
  padding: 32rpx;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  position: relative;
  overflow: hidden;
}

.sc-header {
  margin-bottom: 20rpx;
}

.sc-name {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-900);
  line-height: 1.2;
}

.sc-time-badge {
  padding: 8rpx 16rpx;
  border-radius: var(--radius-sm);
  font-size: 22rpx;
  font-weight: 700;
}

.sc-footer {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: var(--text-500);
}

.info-icon {
  font-size: 24rpx;
}

/* ===== 空状态 ===== */
.empty-day {
  padding: 100rpx 0;
  text-align: center;
}

.empty-emoji {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  display: block;
}
