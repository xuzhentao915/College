/* pages/schedule/schedule.wxss */

.schedule-container {
  padding-top: 180rpx;
  padding-left: var(--spacing-md);
  padding-right: var(--spacing-md);
  background-color: var(--bg-color);
}

/* ===== 星期选择器 ===== */
.week-bar {
  display: flex;
  justify-content: space-between;
  padding: var(--spacing-sm) var(--spacing-sm);
  background: var(--bg-color);
  border-radius: var(--radius-xl);
  box-shadow: var(--neu-shadow-out);
  position: fixed;
  top: 80rpx;
  left: var(--spacing-md);
  right: var(--spacing-md);
  z-index: 100;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
}

.week-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 18rpx;
  border-radius: var(--radius-lg);
  transition: all 0.25s ease;
  color: var(--text-secondary);
  position: relative;
  gap: 6rpx;
}

.week-active {
  color: var(--true-white);
  background: var(--primary-gradient);
  box-shadow: 0 6rpx 20rpx rgba(91, 140, 255, 0.4);
  font-weight: 600;
}

.week-label {
  font-size: 24rpx;
  font-weight: 500;
}

/* 有课程时显示的小点 */
.week-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: var(--primary-color);
}

.week-active .week-dot {
  background: var(--true-white);
}

/* ===== Timeline 布局 ===== */
.schedule-body {
  padding-top: var(--spacing-sm);
}

.timeline {
  position: relative;
  padding-left: 48rpx;
}

.timeline-item {
  position: relative;
  padding-bottom: var(--spacing-lg);
}

.timeline-item:last-child {
  padding-bottom: 0;
}

/* 时间轴节点 */
.timeline-node {
  position: absolute;
  left: -48rpx;
  top: 32rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 4rpx solid var(--primary-color);
  background: var(--bg-color);
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.node-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
}

/* 连接线 */
.timeline-line {
  position: absolute;
  left: -37rpx;
  top: 56rpx;
  bottom: 0;
  width: 2rpx;
  background: var(--divider-color);
}

/* ===== 课程卡片 ===== */
.schedule-card {
  background: var(--bg-color);
  border-radius: var(--radius-md);
  box-shadow: var(--neu-shadow-out);
  padding: var(--spacing-md) var(--spacing-md) var(--spacing-md) var(--spacing-lg);
  border: 1rpx solid rgba(255, 255, 255, 0.35);
  overflow: hidden;
}

.sc-header {
  align-items: flex-start;
}

.sc-name {
  flex: 1;
  line-height: 1.4;
}

.sc-time-badge {
  padding: 6rpx 16rpx;
  border-radius: var(--radius-full);
  font-weight: 600;
  flex-shrink: 0;
  margin-left: var(--spacing-sm);
}

/* ===== 空状态 ===== */
.empty-day {
  padding: 120rpx var(--spacing-md);
  background: var(--bg-color);
  border-radius: var(--radius-lg);
  box-shadow: var(--neu-shadow-in);
  margin-top: var(--spacing-md);
}
