<view class="page-container user-page">
  <!-- 动态顶部适配 -->
  <view style="height: {{navHeight}}px; width: 100%;"></view>

  <!-- ===== 个人名片卡 ===== -->
  <view class="profile-card">
    <view class="profile-avatar flex-center">
      <text class="avatar-initial">李</text>
    </view>
    <view class="profile-info">
      <text class="profile-name">李同学</text>
      <text class="profile-id font-num">ID: 20230001</text>
      <view class="profile-badge">
        <text class="badge-text">计算机科学与技术</text>
      </view>
    </view>
  </view>

  <!-- ===== 功能菜单组 ===== -->
  <view class="menu-section">
    <view class="menu-group">
      <view class="menu-item" bindtap="handleTap" data-action="grades">
        <view class="menu-icon-box" style="background: #FEE2E2;">⭐</view>
        <text class="menu-label">我的成绩</text>
        <view class="menu-arrow"></view>
      </view>
      <view class="menu-divider"></view>
      <view class="menu-item" bindtap="handleTap" data-action="schedule">
        <view class="menu-icon-box" style="background: #E0F2FE;">📅</view>
        <text class="menu-label">我的课表</text>
        <view class="menu-arrow"></view>
      </view>
    </view>

    <view class="menu-group">
      <view class="menu-item" bindtap="handleTap" data-action="about">
        <view class="menu-icon-box" style="background: #F0FDF4;">ℹ️</view>
        <text class="menu-label">关于我们</text>
        <view class="menu-arrow"></view>
      </view>
      <view class="menu-divider"></view>
      <view class="menu-item" bindtap="handleTap" data-action="settings">
        <view class="menu-icon-box" style="background: #FAF5FF;">⚙️</view>
        <text class="menu-label">系统设置</text>
        <view class="menu-arrow"></view>
      </view>
    </view>
  </view>

  <!-- ===== 退出按钮 ===== -->
  <view class="logout-btn" bindtap="handleTap" data-action="logout">
    <text class="logout-text">退出当前账号</text>
  </view>

  <view class="flex-center" style="padding: 60rpx 0;">
    <text class="text-xs" style="color: var(--text-300); letter-spacing: 2rpx;">COLLEGE v1.1.0 • PREMIUM EDITION</text>
  </view>
</view>
