.user-page {
  padding-top: 40rpx;
}

/* ===== 个人名片 ===== */
.profile-card {
  background: var(--bg-card);
  padding: 48rpx;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-lg);
  margin-bottom: 60rpx;
  border: 1px solid var(--border-light);
  display: flex;
  align-items: center;
  gap: 40rpx;
  position: relative;
  overflow: hidden;
}

.profile-card::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 150rpx;
  height: 150rpx;
  background: var(--primary-light);
  opacity: 0.3;
  border-radius: 0 0 0 100%;
}

.profile-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: var(--radius-full);
  background: var(--primary-gradient);
  box-shadow: var(--shadow-primary);
  border: 6rpx solid white;
}

.avatar-initial {
  color: white;
  font-size: 56rpx;
  font-weight: 700;
}

.profile-info {
  flex: 1;
}

.profile-name {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--text-900);
  margin-bottom: 8rpx;
  display: block;
}

.profile-id {
  font-size: 24rpx;
  color: var(--text-500);
  margin-bottom: 16rpx;
  display: block;
}

.profile-badge {
  display: inline-flex;
  background: var(--primary-light);
  padding: 6rpx 20rpx;
  border-radius: var(--radius-full);
}

.badge-text {
  font-size: 20rpx;
  color: var(--primary);
  font-weight: 700;
}

/* ===== 菜单网格 ===== */
.menu-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.menu-group {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--border-light);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  transition: background 0.2s ease;
}

.menu-item:active {
  background: var(--bg-main);
}

.menu-icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-md);
  margin-right: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
}

.menu-label {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-700);
}

.menu-arrow {
  width: 12rpx;
  height: 12rpx;
  border-top: 4rpx solid var(--text-300);
  border-right: 4rpx solid var(--text-300);
  transform: rotate(45deg);
}

.menu-divider {
  height: 1rpx;
  background: var(--border-light);
  margin-left: 144rpx;
}

/* ===== 退出登录 ===== */
.logout-btn {
  margin-top: 60rpx;
  padding: 32rpx;
  background: #FEF2F2;
  border-radius: var(--radius-lg);
  text-align: center;
}

.logout-text {
  color: var(--danger);
  font-size: 28rpx;
  font-weight: 700;
}
