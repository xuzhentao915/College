page {
  /* ===== 核心色彩 - Premium Academic ===== */
  --primary: #3B82F6;
  --primary-light: #EFF6FF;
  --primary-gradient: linear-gradient(135deg, #60A5FA 0%, #3B82F6 100%);
  --accent: #8B5CF6;
  
  /* 辅助状态色 */
  --success: #10B981;
  --warning: #F59E0B;
  --danger: #EF4444;

  /* 文字体系 (Slate Grays) */
  --text-900: #0F172A; /* 标题 */
  --text-700: #334155; /* 正文 */
  --text-500: #64748B; /* 次要 */
  --text-300: #94A3B8; /* 提示 */

  /* 背景与卡片 */
  --bg-main: #F8FAFC;
  --bg-card: #FFFFFF;
  --bg-glass: rgba(255, 255, 255, 0.8);

  /* 边框与阴影 */
  --border-light: #F1F5F9;
  --shadow-sm: 0 2px 4px rgba(0,0,0,0.02);
  --shadow-md: 0 10px 15px -3px rgba(0,0,0,0.04), 0 4px 6px -2px rgba(0,0,0,0.02);
  --shadow-lg: 0 20px 25px -5px rgba(0,0,0,0.08), 0 10px 10px -5px rgba(0,0,0,0.04);
  --shadow-primary: 0 10px 15px -3px rgba(59, 130, 246, 0.2);

  /* 几何规范 */
  --radius-sm: 12rpx;
  --radius-md: 20rpx;
  --radius-lg: 32rpx;
  --radius-xl: 48rpx;
  --radius-full: 999rpx;

  background-color: var(--bg-main);
  color: var(--text-700);
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'PingFang SC', sans-serif;
  line-height: 1.5;
}

/* ===== 全局排版工具类 ===== */
.font-num { font-family: 'DIN Alternate', 'Inter', sans-serif; }
.font-bold { font-weight: 700; }
.title-xl { font-size: 48rpx; color: var(--text-900); letter-spacing: -1rpx; }
.title-lg { font-size: 36rpx; color: var(--text-900); }
.text-md { font-size: 28rpx; }
.text-sm { font-size: 24rpx; }
.text-xs { font-size: 20rpx; }

/* ===== 通用容器 ===== */
.page-container {
  padding: 32rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.glass-card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  border: 1px solid var(--border-light);
}

/* ===== 布局工具类 ===== */
.flex-row { display: flex; align-items: center; }
.flex-col { display: flex; flex-direction: column; }
.flex-center { display: flex; justify-content: center; align-items: center; }
.justify-between { justify-content: space-between; }
.gap-8 { gap: 8rpx; }
.gap-16 { gap: 16rpx; }
.gap-24 { gap: 24rpx; }

/* ===== 移动端安全适配 ===== */
/* 顶部导航占位 */
.nav-placeholder {
  width: 100%;
  pointer-events: none;
}

/* 底部安全区 (iPhone Home Indicator) */
.safe-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 针对 Android 和 iOS 的微调 */
.platform-ios .font-bold { font-weight: 600; }
.platform-android .font-bold { font-weight: 700; }

::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

/* 玻璃拟态全局增强 */
.glass-effect {
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  background: rgba(255, 255, 255, 0.75);
}



