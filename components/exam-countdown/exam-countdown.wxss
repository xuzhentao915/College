.countdown-card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: 32rpx;
  box-shadow: var(--shadow-md);
  border: 1px solid var(--border-light);
  margin-bottom: 32rpx;
}

.card-header {
  margin-bottom: 24rpx;
}

.exam-icon {
  width: 32rpx;
  height: 32rpx;
}

.title-text {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-900);
}

.exam-count {
  font-size: 20rpx;
  color: var(--text-300);
  background: var(--bg-main);
  padding: 4rpx 12rpx;
  border-radius: var(--radius-sm);
}

.exam-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.exam-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.exam-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-900);
}

.exam-date {
  font-size: 22rpx;
  color: var(--text-500);
  margin-top: 4rpx;
}

.days-box {
  align-items: flex-end;
}

.days-num {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--primary);
  line-height: 1;
}

.text-danger {
  color: var(--danger) !important;
}

.days-label {
  font-size: 18rpx;
  color: var(--text-300);
  font-weight: 700;
  margin-top: 4rpx;
}

.progress-bg {
  height: 8rpx;
  background: var(--border-light);
  border-radius: var(--radius-full);
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  border-radius: var(--radius-full);
  transition: width 1s ease-in-out;
}
